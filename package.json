{
    "name": "all-mangas-reader",
    "version": "4.0.5",
    "description": "All Mangas Reader - Browser extension for reading and tracking manga (Vue 3 + Vuetify 3)",
    "author": "Ryuu3rs",
    "contributors": [
        "Pierre-Louis Duhoux <pl.duhoux@gmail.com>",
        "alysson-souza"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/Ryuu3rs/all-mangas-reader-3.git"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "engines": {
        "node": ">= 18.0.0 < 19.0.0 || >= 20.0.0 < 21.0.0 || >= 22.0.0 < 23.0.0"
    },
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --progress",
        "build:dev": "cross-env NODE_ENV=development webpack --config webpack.config.js --progress",
        "build-zip": "node scripts/build-zip.js",
        "manifest:specify": "node scripts/update-manifest.js",
        "watch": "yarn run build --watch",
        "watch:dev": "yarn run build:dev --watch",
        "watch:dev:hot": "yarn run build:dev --watch --hot",
        "watch:dev:chrome": "TARGET_BROWSER=chrome AMR_BROWSER=chrome yarn run watch:dev",
        "watch:dev:firefox": "AMR_BROWSER=firefox yarn run watch:dev",
        "android:dev": "yarn run build:dev && yarn run manifest:specify -firefox && yarn run build-zip -xpi -push",
        "discord:beta": "node scripts/discord-notify.js --channel \"Beta\"",
        "discord:alpha": "node scripts/discord-notify.js --channel \"Alpha\"",
        "prepare": "husky install",
        "server:start": "node src_web/express.js",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint src --ext .js,.ts,.vue",
        "lint:fix": "eslint src --ext .js,.ts,.vue --fix",
        "type-check": "tsc --noEmit"
    },
    "dependencies": {
        "@zip.js/zip.js": "^2.7.30",
        "buffer": "^6.0.3",
        "changelog-parser": "^3.0.1",
        "cheerio": "^1.0.0-rc.12",
        "crypto-browserify": "^3.12.0",
        "crypto-js": "^4.2.0",
        "ejs": "^3.1.9",
        "mime-db": "^1.52.0",
        "mitt": "^3.0.1",
        "pinia": "^3.0.4",
        "stream-browserify": "^3.0.0",
        "streamsaver": "^2.0.5",
        "vue": "^3.5.25",
        "vue-easy-lightbox": "^1.19.0",
        "vue-scrollto": "^2.20.0",
        "vuetify": "^3.11.0",
        "vuex": "^4.1.0",
        "web-streams-polyfill": "^3.2.1",
        "webextension-polyfill": "^0.12.0"
    },
    "devDependencies": {
        "@mdi/js": "^6.9.96",
        "@types/crypto-js": "^4.2.1",
        "@types/mime-db": "^1.43.5",
        "@types/node": "^18.17.18",
        "@types/offscreencanvas": "^2019.7.3",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vitejs/plugin-vue": "^5.2.4",
        "@vue/test-utils": "^2.4.6",
        "circular-dependency-plugin": "^5.2.2",
        "clean-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^7.0.0",
        "cross-env": "^7.0.2",
        "css-loader": "^5.0.1",
        "eslint": "^8.54.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-vue": "^9.19.2",
        "eslint-plugin-vuetify": "^2.5.3",
        "express": "5.0.0-beta.3",
        "husky": "^8.0.3",
        "jsdom": "^27.2.0",
        "lint-staged": "^15.1.0",
        "prettier": "^2.8.8",
        "sass": "~1.32",
        "sass-loader": "^13.3.2",
        "sharp": "^0.30.0",
        "style-loader": "^3.3.3",
        "terser-webpack-plugin": "^5.1.1",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "vitest": "^0.34.6",
        "vue-loader": "^17.4.2",
        "web-ext": "^7.8.0",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4",
        "webpack-compiler-plugin": "^1.1.5",
        "webpack-ext-reloader": "^1.1.12",
        "webpack-shell-plugin-next": "^2.1.1",
        "zip-dir": "^2.0.0"
    }
}
