{
    "compilerOptions": {
        "lib": ["dom", "ES2022"],
        "target": "ES2021",
        "module": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "outDir": "dist",
        "skipLibCheck": true
    },
    "include": ["src", "index.d.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "dist/**/*", "build/**/*"],
    "vueCompilerOptions": {
        "target": 3
    }
}
